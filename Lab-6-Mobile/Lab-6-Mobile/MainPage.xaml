<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab_6_Mobile.MainPage"
             Title="Завдання 1. Список">

    <ScrollView>
        <VerticalStackLayout Padding="20">

            <Label Text="Виберіть елемент:" 
               FontSize="20" 
               HorizontalOptions="Center"
               Margin="0,10"/>

            <CollectionView ItemsSource="{Binding Items}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                SelectionChanged="OnSelectionChanged"
                Margin="0,10">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10"
                               Margin="5"
                               BorderColor="Gray"
                               CornerRadius="10"
                               HasShadow="True"
                               BackgroundColor="Indigo"
                               HorizontalOptions="Fill"
                               VerticalOptions="Fill">

                            <Label Text="{Binding}" FontSize="18" InputTransparent="True"/>

                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualState Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="Indigo"/>
                                            <Setter Property="BorderColor" Value="Gray"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="MediumPurple"/>
                                            <Setter Property="BorderColor" Value="White"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label x:Name="SelectedLabel" 
               FontSize="18" 
               Text="Ви вибрали: " 
               HorizontalOptions="Center"
               Margin="0,20,0,40"/>

            <Button Text="Перейти до Завдання 2" 
                HorizontalOptions="Center"
                VerticalOptions="End"
                FontAttributes="Bold"
                TextColor="DarkSlateBlue"
                Clicked="OnSwitchLayout"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>